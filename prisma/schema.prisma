// Prisma schema para Supabase (PostgreSQL)
// Documentação: https://pris.ly/d/supabase

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Entidades base (serão expandidas nas tarefas de cadastro)
// supabaseUserId liga ao auth.users do Supabase
model User {
  id              String   @id @default(cuid())
  supabaseUserId  String?  @unique @map("supabase_user_id")
  email           String   @unique
  role            Role     @default(OWNER)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("users")
}

enum Role {
  OWNER
  DRIVER
  ADMIN
}
